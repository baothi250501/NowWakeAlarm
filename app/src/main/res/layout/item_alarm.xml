<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:src="@drawable/bg_clock"
                app:tint="@color/purple_200" />

            <!--<ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/bg_clock" />-->
        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_alarm_item"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/wall_clock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/icon_alarm_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleAlarmItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wake up"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recurDayAlarmItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Repeating" />

            <TextView
                android:id="@+id/timeAlarmItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="30dp" />


        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/startAlarmItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

