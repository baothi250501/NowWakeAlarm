<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9A1A0"
        android:orientation="vertical"
        tools:context=".ui.AddAlarmActivity"
        tools:showIn="@layout/activity_add_alarm">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D9A1A0">
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/scheduleAlarmHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_alarm_time"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:fontFamily="@font/coconutz"
            android:textSize="24sp"/>

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D9A1A0"
            android:layout_gravity="center"
            android:timePickerMode="spinner"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bottom_add_alarm_activity">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/options"
                        android:textSize="36sp"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:fontFamily="@font/coconutz"
                        android:gravity="top"
                        />
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/title"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/coconutz"
                        android:gravity="top"
                        />
                    <EditText
                        android:id="@+id/alarmTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alarm Title"
                        android:textSize="24sp"
                        android:textColorHint="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/note"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/coconutz"
                        android:gravity="top"
                        />
                    <EditText
                        android:id="@+id/alarmNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/alarm_note"
                        android:textSize="24sp"
                        android:textColorHint="@color/colorAccent"/>

                    <CheckBox
                        android:id="@+id/recurringCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/recurring_days"
                        android:textColor="@color/black"
                        android:fontFamily="@font/coconutz"
                        android:textSize="20sp"/>

                    <HorizontalScrollView
                        android:id="@+id/optionsRecurring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:fillViewport="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ToggleButton
                                android:id="@+id/monRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/mon"
                                android:textOn="@string/mon"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle"/>

                            <ToggleButton
                                android:id="@+id/tueRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/tue"
                                android:textOn="@string/tue"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle"/>

                            <ToggleButton
                                android:id="@+id/wedRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/wed"
                                android:textOn="@string/wed"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle" />

                            <ToggleButton
                                android:id="@+id/thuRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/thu"
                                android:textOn="@string/thu"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle"/>

                            <ToggleButton
                                android:id="@+id/friRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/fri"
                                android:textOn="@string/fri"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle" />

                            <ToggleButton
                                android:id="@+id/satRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/sat"
                                android:textOn="@string/sat"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle"/>

                            <ToggleButton
                                android:id="@+id/sunRecurringCheck"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textOff="@string/sun"
                                android:textOn="@string/sun"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textStyle="italic"
                                android:layout_margin="3dp"
                                style="@style/toggleButton"
                                android:background="@drawable/bg_toggle"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkTryHard">

                        <TextView
                            android:id="@+id/nameCheckTryHard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/try_hard"
                            android:textSize="20sp"
                            android:fontFamily="@font/coconutz"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/checkBoxTryHard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_centerVertical="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/checkVibrate">

                        <TextView
                            android:id="@+id/nameCheckVibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="@string/vibrate"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/coconutz"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/checkBoxVibrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="3dp"
                            android:layout_centerVertical="true"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/alarmSoundCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F6E6E8"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="6dp">

                        <LinearLayout
                            android:id="@+id/alarmSoundItem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/setToneAlarm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:text="@string/alarm_sound"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black"
                                android:fontFamily="@font/coconutz"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:layout_editor_absoluteX="0dp" />

                            <TextView
                                android:id="@+id/setToneNameAlarm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:text="@string/alarm_sound"
                                android:fontFamily="@font/coconutz"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/setToneAlarm"
                                tools:layout_editor_absoluteX="0dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/optionalCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#F6E6E8"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="6dp">
                        <TextView
                            android:id="@+id/titleOptional"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:text="@string/more_options"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/black"
                            android:fontFamily="@font/coconutz"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="0dp"/>
                        <LinearLayout
                            android:id="@+id/optionalOptions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/urlTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/url"
                                android:textSize="16sp"
                                android:fontFamily="@font/coconutz"
                                android:textColor="@color/black"
                                android:gravity="top"
                                />
                            <EditText
                                android:id="@+id/urlAlarm"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:hint="@string/alarm_url"
                                android:textSize="24sp"
                                android:textColorHint="@color/colorAccent"/>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/setAddressCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#F6E6E8"
                                android:layout_marginTop="10dp"
                                app:cardCornerRadius="6dp">

                                <LinearLayout
                                    android:id="@+id/setAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/setAddressTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="6dp"
                                        android:text="@string/alarm_address"
                                        android:textAlignment="center"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/coconutz"
                                        android:textSize="20sp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        tools:layout_editor_absoluteX="0dp" />

                                    <TextView
                                        android:id="@+id/nameAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="6dp"
                                        android:text="@string/name_alarm"
                                        android:fontFamily="@font/coconutz"
                                        android:textAlignment="center"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@id/setToneAlarm"
                                        tools:layout_editor_absoluteX="0dp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>




                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </LinearLayout>
</layout>